@model EmailViewModel

@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<table class="blueTable">
    <thead>
        <tr>
            <th>№</th>
            <th>Sender</th>
            <th>Receive Date</th>
            <th>Subject</th>
            <th>Body</th>
            <th>Status</th>
            <th>Attachment Name</th>
            <th>Attachment Size Kb</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Sender</td>
            <td>@Model.ReceiveDate</td>
            <td>@Model.Subject</td>
            <td>@Model.Body</td>
            <td>@Model.EnumStatus</td>
            <td>@Model.AttachmentName</td>
            <td>@Model.AttachmentSize</td>
        </tr>
    </tbody>
</table>

<p></p>
<form method="post">
    <button asp-route-Id="@Model.Id" asp-controller="Email" asp-action="MarkInvalid" name="NotValid" type="submit" class="btn btn-lg btn-danger">Mark as Invalid</button>
    <button asp-route-Id="@Model.Id" asp-controller="Email" asp-action="MarkNew" name="New" type="submit" class="btn btn-lg btn-info">Mark as New</button>
    <button asp-route-Id="@Model.Id" asp-controller="Email" asp-action="MarkOpen" name="Open" type="submit" class="btn btn-lg btn-success">Mark as Open</button>
    <button asp-route-Id="@Model.Id" asp-controller="Email" asp-action="MarkClosed" name="Closed" type="submit" class="btn btn-lg btn-danger">Mark as Closed</button>
    <button asp-route-Id="@Model.Id" asp-controller="Email" asp-action="MarkNotReviewed" name="NotReviewed" type="submit" class="btn btn-lg btn-info">Mark as Not Reviewed</button>
</form>