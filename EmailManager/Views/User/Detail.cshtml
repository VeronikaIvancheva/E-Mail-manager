@using EmailManager.Models.UserViewModel;
@model UserViewModel

@{
    ViewBag.Title = @Model.Name;
}

@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <div class="header clearfix detailHeading">
        <h2 class="text-muted">User Information</h2>
    </div>
    <div class="jumbotron" style="background-color: rgba(255, 254, 254, 0.32)">
        <div class="row">
            <div class="col-md-4">
                <div>
                    <h2>@Model.Name</h2>
                    <div>
                        <div>ID: @Model.Id</div>
                        <div>Member Since: @Model.InitialRegistration</div>
                    </div>
                    @if (User.IsInRole("admin"))
                    {
                        <br />
                        <form asp-controller="User" asp-action="BanUser" method="post" asp-route-userId="@Model.Id">
                            <button type="submit" class="btn btn-lg btn-danger">Ban User</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>